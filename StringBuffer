package com.demo;

public class Stringbuffer {

public static void main(String args[]){
    StringBuffer st=new StringBuffer("hello world");
    //appends the given string
    st.append(" hi");
    System.out.println("new string is "+st);
//reverses the given string
    st.reverse();
    System.out.println("string is reversed "+st);
    st.reverse();
    System.out.println("string is reversed "+st);
    //returns the substring of given string
    System.out.println("sub-string is reversed "+st.substring(5));
    System.out.println("sub-string is reversed "+st.substring(5,7));
    System.out.println("character at index 4 is  "+st.charAt(10));
    //returns the capacity of stringbuffer
    System.out.println("capacity of stringbuffer st  "+st.capacity());
    //increase the capacity
    st.ensureCapacity(50);
    System.out.println("increased capacity of stringbuffer st  "+st.capacity());
    //deletes the specified string with specified index
    System.out.println("capacity of stringbuffer st  "+st.delete(12,14));
    //inserts the new string
    System.out.println("inserted a string to existing  stringbuffer st  "+st.insert(12,"hi"));

}
